{
  "name": "copyin2clicks",
  "displayName": "CopyIn2Clicks",
  "version": "1.0.1",
  "description": "This extension Allow you to copy from all kind of site and auto save it into Clipboard.",
  "author": "G. Hussain",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "firefox-dev": "plasmo dev --target=firefox-mv2",
    "firefox-build": "plasmo build --target=firefox-mv2",
    "firefox-package": "plasmo package --target=firefox-mv2"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.10.0",
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.1.0",
    "react-tooltip": "^5.26.4",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "{3e26878e-a57c-440a-a804-70d9e3f9df2a}"
      }
    },
    "permissions": [
      "storage",
      "downloads",
      "scripting",
      "clipboardRead", 
      "clipboardWrite"
    ]
  }
}